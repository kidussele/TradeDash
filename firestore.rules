rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requester is authenticated.
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the requester is the owner of the document.
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User profiles can be read by anyone but only written by the owner.
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // All user-specific subcollections are only accessible by the owner.
    match /users/{userId}/{collection}/{documentId} {
       allow read, write: if isOwner(userId);
    }
  }
}
