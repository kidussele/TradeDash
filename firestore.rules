
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requester is authenticated.
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the requester is the owner of the document.
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User profiles can be read by anyone but only created and updated by the owner.
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create, update: if isOwner(userId);
    }
    
    // All user-specific subcollections are only accessible by the owner.
    match /users/{userId}/{collection}/{documentId} {
       allow read, write: if isOwner(userId);
    }

    // User status can be read and written by any authenticated user.
    // This is necessary for the real-time presence system.
    match /userStatus/{userId} {
      allow read, write: if isAuthenticated();
    }

    // Chat rooms can be read and written by any authenticated user who is a member.
    match /chatRooms/{roomId} {
      allow read, write: if isAuthenticated() && request.auth.uid in resource.data.members;

      // Messages can be read and written by any authenticated user who is a member of the room.
      match /messages/{messageId} {
        allow read, write: if isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/chatRooms/$(roomId)).data.members;
      }
    }
  }
}
